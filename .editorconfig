# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{scss,sass,css,js}]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{js,scss,css}]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2
